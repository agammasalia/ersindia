<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:background="#eee"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" >
		
		<!--  View Title Label -->
		<TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/headerText"
          android:layout_gravity="center"
          android:layout_marginTop="15dip" 
          android:text="LOGIN"
          android:textSize="20sp" android:paddingBottom="5sp"
           />
		<!--  Email TextField -->

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="fill_parent"
            android:textColor="#000000"
            style="@style/Single_EditText"
            android:layout_height="match_parent"
            android:hint="ERS ID" >

            <requestFocus />
        </EditText>
		<!--  Password TextField -->

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="fill_parent" 
            android:textColor="#000000"
            style="@style/Single_EditText"
            android:layout_height="match_parent"
            android:hint="Password"
            android:password="true" />
        
       

		<!--  Login Button -->        
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@layout/button_layout"
            android:layout_marginTop="20dip" 
            android:textColor="#ffffff"
            style="@style/button"
            android:text="Login" />

        <!--  Link to Registration Screen -->

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:text="Don&apos;t have an account? Register !"
            android:textColor="#0099CC"
            android:textStyle="bold" />

        <!--  Link to Forget Password-->

        <Button
            android:id="@+id/btnLinkToForgetPassword"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:text="Forgot Password...!!!"
            android:textColor="#0099CC"
            android:textStyle="bold" />

        </LinearLayout>

</ScrollView>
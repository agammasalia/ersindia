<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:background="#eee"
    android:layout_height="fill_parent" >

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="10dip" >
	  

	<TextView
		  android:id="@+id/editDetails"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"   
          style="@style/headerText"
          android:layout_gravity="center"
          android:gravity="center"       
          android:text="EDIT OFFER DETAILS"
          android:textSize="20sp"
          android:paddingBottom="5sp"
           />  
	  <EditText 
	      android:id="@+id/editCity"
	      android:layout_below="@+id/editDetails"
          android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      style="@style/Single_EditText"
	      android:ems="10" 
	      android:textColor="#FF0000"
	      android:hint="Enter City" >

          <requestFocus />
      </EditText>
      
      <EditText
          android:id="@+id/editSource"
          android:layout_below="@id/editCity"
          android:layout_width="match_parent" 
          android:layout_height="wrap_content"
          style="@style/Single_EditText"
          android:ems="10" android:textColor="#FF0000"
          android:hint="Enter Source" />

      <EditText
          android:id="@+id/editDestination"
          android:layout_below="@id/editSource"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/Single_EditText"
          android:layout_marginBottom="10dip"
          android:ems="10" android:textColor="#FF0000"
          android:hint="Enter Destination" />

      <LinearLayout android:id="@+id/linearDate"
        android:layout_below="@id/editDestination"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingBottom="15sp">
	  
		<TextView
            android:id="@+id/TextView10"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ems="10"
            style="@style/normalText"
            android:gravity="center_vertical"
            android:text="Date" />
		
		<TextView
          android:id="@+id/editDate"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_weight="1"
	      style="@style/normalText"
	      android:ems="10"
          android:gravity="center_vertical"
          android:text="Date" />
      
      	
	
	  </LinearLayout>
	
      <LinearLayout android:id="@+id/linearTime"
        android:layout_below="@id/linearDate"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingBottom="15sp">
	  
		<TextView
		    android:id="@+id/TextView11"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    style="@style/normalText"
		    android:ems="10"
		    android:gravity="center_vertical"
		    android:text="Time" />
		
		<TextView
		    android:id="@+id/editTime"
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    style="@style/normalText"
		    android:ems="10"
		    android:gravity="center_vertical"
		    android:text="Time" />
      
      	
	
	  </LinearLayout>
	
      <LinearLayout android:id="@+id/linearGender"
        android:layout_below="@id/linearTime"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:orientation="horizontal">
	  
		<TextView
          android:id="@+id/editGender"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_weight="1"
	      style="@style/normalText"
	      android:ems="10"
          android:gravity="center_vertical"
          android:text="Gender" />
      
      	<Spinner
      	    android:id="@+id/buttonGender"
      	    android:layout_width="fill_parent"
      	    android:layout_height="match_parent"
      	    android:layout_weight="1"
      	    android:prompt="@string/chooseOption" />
	
	  </LinearLayout>
	
      <LinearLayout android:id="@+id/linearType"
        android:layout_below="@id/linearGender"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:orientation="horizontal">
	  
		<TextView
          android:id="@+id/editType"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_weight="1"
	      style="@style/normalText"
	      android:ems="10"
          android:gravity="center_vertical"
          android:text="Carpool Type" />
      
      	<Spinner
      	    android:id="@+id/buttonType"
      	    android:layout_width="fill_parent"
      	    android:layout_height="match_parent"
      	    android:layout_weight="1"
      	    android:prompt="@string/chooseOption" />
	
	  </LinearLayout>
	
      <LinearLayout android:id="@+id/linearVehicle"
        android:layout_below="@id/linearType"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:orientation="horizontal">
	  
		<TextView
          android:id="@+id/editVehicle"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_weight="1"
	      style="@style/normalText"
	      android:ems="10"
          android:gravity="center_vertical"
          android:text="Select Vehicle" />
      
      	<Spinner
      	    android:id="@+id/buttonVehicle"
      	    android:layout_width="fill_parent"
      	    android:layout_height="match_parent"
      	    android:layout_weight="1"
      	    android:prompt="@string/chooseOption" />
	
	  </LinearLayout>

      <EditText
          android:id="@+id/editVehicleNumber"
          android:layout_below="@id/linearVehicle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/Single_EditText"
          android:ems="10" android:textColor="#000000"
          android:hint="Enter Vehicle Number" />
      
      <EditText
          android:id="@+id/editVacancy"
          android:layout_below="@id/editVehicleNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/Single_EditText"
          android:inputType="number"
          android:ems="10" android:textColor="#000000"
          android:hint="Enter Number of Vacancy" />
      
      <EditText
          android:id="@+id/editFare"
          android:layout_below="@id/editVacancy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/Single_EditText"
          android:inputType="number"
          android:layout_marginBottom="10dip"
          android:ems="10" android:textColor="#000000"
          android:hint="Enter Fare" />
      
      <LinearLayout android:id="@+id/linearButton"
        android:layout_below="@id/editFare"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	  
      <Button
          android:id="@+id/buttonEditOffer"
          android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
          android:layout_weight="1"
          android:layout_marginRight="10dip"
          android:background="@layout/button_layout"
	      android:textColor="#ffffff"
	      style="@style/button"
          android:text="Edit Offer" />
      
      	<Button
          android:id="@+id/buttonDeleteOffer"
		  android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:layout_weight="1"
          android:layout_marginRight="10dip"
	      android:background="@layout/button_layout"
          android:textColor="#ffffff"
          style="@style/button"
          android:text="Delete Offer" />
	
	  </LinearLayout>
	  
      <LinearLayout
        android:id="@+id/LinearOpenMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
          android:layout_marginTop="10dip"
          android:layout_marginRight="10dip"
	      android:background="@layout/button_layout"
          android:textColor="#ffffff"
          style="@style/button"
            android:text="View Location in Map" />
        
      </LinearLayout>
      

  </LinearLayout>

</ScrollView>